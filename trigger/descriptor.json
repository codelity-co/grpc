{
  "name": "grpc-trigger",
  "type": "flogo:trigger",
  "shim": "plugin",
  "version": "0.0.1",
  "title": "gRPC Trigger",
  "description": "gRPC Trigger",
  "ref":"github.com/project-flogo/grpc/trigger",
  "homepage": "https://github.com/project-flogo/grpc/tree/master/trigger",
  "settings": [
    {
      "name": "port",
      "type": "int",
      "required": true
    },
    {
      "name": "protoName",
      "type": "string",
      "required": true
    },
    {
      "name": "protoFile",
      "type": "string"
    },
    {
      "name":"enableTLS",
      "type":"boolean",
      "value": false
    },
    {
      "name": "serverCert",
      "type": "string"
    },
    {
      "name": "serverKey",
      "type": "string"
    }
  ],
  "output": [
    {
      "name": "params",
      "type": "object"
    },
    {
      "name": "grpcData",
      "type": "object"
    },
    {
      "name": "content",
      "type": "any"
    }
  ],
  "reply": [
    {
      "name": "code",
      "type": "integer"
    },
    {
      "name": "data",
      "type": "any"
    }
  ],
  "handler": {
    "settings": [
      {
        "name": "serviceName",
        "type": "string",
        "required": true
      },
      {
        "name": "methodName",
        "type": "string",
        "required": true
      }
    ]
  }
}
